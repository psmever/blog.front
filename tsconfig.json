{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/Screen": ["./src/components/screen"],
            "@/Provider": ["./src/components/provider"],
            "@/Hook": ["./src/hook"],
            "@/Common/*": ["./src/common/*"],
            "@/Types": ["./src/types"],
            "@/Type/*": ["./src/types/*"],
            "@/State": ["./src/state"],
            "@/Style/*": ["./src/style/*"],
            "@/Element": ["./src/components/element"],
            "@/Icon": ["./src/components/icon"],
            "@/PageComponent": ["./src/page-component"],
            "@/Messages": ["./src/common/messages"],
            "@/ServerInterface": ["./src/common/server-interface"],
            "@/Helper": ["./src/common/helper"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"],
    "types": ["types"]
}
